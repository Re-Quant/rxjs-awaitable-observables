  "version": "1.0.10",
  "bugs": {
    "url": "https://github.com/z-brain/rxjs-awaitable-observables/issues"
  },
  "homepage": "https://github.com/z-brain/rxjs-awaitable-observables#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/z-brain/rxjs-awaitable-observables.git"
