    "eslint-plugin-promise": "~4.2.1",
    "eslint-plugin-unicorn": "~20.1.0",
    "husky": "~4.2.5",
    "jest": "~27.2.4",
    "jest-extended": "~0.11.5",
    "rimraf": "~3.0.2",
    "rxjs": "~7.3.1",
    "typescript": "~4.4.3",
    "ts-jest": "~27.0.5"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run pre-push",
      "post-merge": "IS_YARN=true yarn install"
    }
  }
}
